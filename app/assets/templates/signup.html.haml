.row
  .col-md-8
    .panel.panel-default
      .panel-heading
        %h1.panel-title
          Signup
      .panel-body
        %form{:name => "signupForm", :novalidate => "", "ng-submit" => "signup(signupForm)"}
          .form-group{"ng-class" => "{'has-error' : signupForm.email.$touched && signupForm.email.$invalid}"}
            %label.control-label{:for => "email"}
              Email
            %input.form-control{:type => "email", :name => "email", :required => "", :placeholder => "Email", "ng-model" => "user.email"}
            .help-block{"ng-messages" => "signupForm.email.$error", "ng-show" => "signupForm.email.$touched"}
              %div{"ng-messages-include" => "assets/messages.html"}

          .form-group{"ng-class" => "{'has-error' : signupForm.password.$touched && signupForm.password.$invalid}"}
            %label.control-label{:for => "email"}
              Password
            %input.form-control{:type => "password", :name => "password", :required => "", :placeholder => "Password", "ng-model" => "user.password"}
            .help-block{"ng-messages" => "signupForm.password.$error", "ng-show" => "signupForm.password.$touched"}
              %div{"ng-messages-include" => "assets/messages.html"}

          .form-group{"ng-class" => "{'has-error' : signupForm.password_confirmation.$touched && signupForm.password_confirmation.$invalid}"}
            %label.control-label{:for => "email"}
              Confirm Password
            %input.form-control{:type => "password", :name => "password_confirmation", :required => "", :placeholder => "Confirm Password", "ng-model" => "user.password_confirmation"}
            .help-block{"ng-messages" => "signupForm.password_confirmation.$error", "ng-show" => "signupForm.password_confirmation.$touched"}
              %div{"ng-messages-include" => "assets/messages.html"}

          .form-group
            %button.btn.btn-default{:type => "submit"}
              Submit

